<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@color/backgroud_app"
    android:layout_height="match_parent"
    tools:context="com.xtremecoders.freedom.Fragments.EmergencyContactFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <com.xtremecoders.freedom.mtplview.MtplTextView
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:text="Emergency Contacts"
                android:background="@drawable/signup_input"
                android:textSize="@dimen/font_24dp"
                android:gravity="center"
                android:textColor="#ff0000"/>

            <android.support.v7.widget.CardView
                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/card_view"
                android:layout_marginTop="@dimen/font_10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                card_view:cardUseCompatPadding="true"
                card_view:cardCornerRadius="8dp"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:weightSum="2"
                    android:id="@+id/lnr_police"
                    android:gravity="center_vertical"
                    android:elevation="@dimen/font_5dp"
                    android:background="@drawable/signup_input"
                    android:orientation="horizontal">

                    <com.xtremecoders.freedom.mtplview.MtplTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Police"
                        android:gravity="center"
                        android:textSize="@dimen/font_20dp"/>

                    <com.xtremecoders.freedom.mtplview.MtplTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="100"
                        android:gravity="center"
                        android:textSize="@dimen/font_20dp"/>

                </LinearLayout>

            </android.support.v7.widget.CardView>


            <android.support.v7.widget.CardView
                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/card_view2"
                android:layout_marginTop="@dimen/font_10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                card_view:cardUseCompatPadding="true"
                card_view:cardCornerRadius="8dp"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:weightSum="2"
                    android:id="@+id/lnr_fire"
                    android:gravity="center_vertical"
                    android:elevation="@dimen/font_5dp"
                    android:background="@drawable/signup_input"
                    android:orientation="horizontal">

                    <com.xtremecoders.freedom.mtplview.MtplTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Fire"
                        android:gravity="center"
                        android:textSize="@dimen/font_20dp"/>


                    <com.xtremecoders.freedom.mtplview.MtplTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="101"
                        android:gravity="center"
                        android:textSize="@dimen/font_20dp"/>

                </LinearLayout>

            </android.support.v7.widget.CardView>


            <android.support.v7.widget.CardView
                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/card_view3"
                android:layout_marginTop="@dimen/font_10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                card_view:cardUseCompatPadding="true"
                card_view:cardCornerRadius="8dp"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:weightSum="2"
                    android:id="@+id/lnr_ambulance"
                    android:gravity="center_vertical"
                    android:elevation="@dimen/font_5dp"
                    android:background="@drawable/signup_input"
                    android:orientation="horizontal">

                    <com.xtremecoders.freedom.mtplview.MtplTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Ambulance"
                        android:gravity="center"
                        android:textSize="@dimen/font_20dp"/>


                    <com.xtremecoders.freedom.mtplview.MtplTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="102"

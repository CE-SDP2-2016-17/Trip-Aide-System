                        android:text="1059"
                        android:gravity="center"
                        android:textSize="@dimen/font_20dp"/>

                </LinearLayout>

            </android.support.v7.widget.CardView>


            <android.support.v7.widget.CardView
                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/card_view7"
                android:layout_marginTop="@dimen/font_10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                card_view:cardUseCompatPadding="true"
                card_view:cardCornerRadius="8dp"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:weightSum="2"
                    android:gravity="center_vertical"
                    android:elevation="@dimen/font_5dp"
                    android:id="@+id/lnr_information"
                    android:background="@drawable/signup_input"
                    android:orientation="horizontal">

                    <com.xtremecoders.freedom.mtplview.MtplTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Emergency Information Services"
                        android:gravity="center"
                        android:textSize="@dimen/font_20dp"/>


                    <com.xtremecoders.freedom.mtplview.MtplTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="107"
                        android:gravity="center"
                        android:textSize="@dimen/font_20dp"/>

                </LinearLayout>

            </android.support.v7.widget.CardView>

        </LinearLayout>
    </ScrollView>
</LinearLayout>